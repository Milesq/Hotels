{
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:vue/essential",
    "@vue/airbnb"
  ],
  "rules": {
    "no-console": "off",
    "no-debugger": "off",
    "comma-dangle": ["error", "never"],
    "vue/no-unused-components": "warn",
    "import/no-unresolved": "off",
    "prefer-template": "off",
    "dot-notation": "off",
    "new-parens": "off",
    "linebreak-style": ["error", "windows"],
    "no-plusplus": "off",
    "no-unused-vars": "warn",
    "prefer-const": "warn",
    "arrow-body-style": "warn",
    "func-names": "off",
    "implicit-arrow-linebreak": "off",
    "no-nested-ternary": "off"
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}
